{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("limesquare\\activecampaign\\assetbundles\\activecampaign\\ActivecampaignAsset") %}

{{ forms.textField({
    label: 'URL',
    instructions: 'Your Active Campaign URL' | t,
    id: 'acUrl',
    name: 'acUrl',
    value: settings.acUrl,
    errors: settings.getErrors('acUrl')
    })
}}

{{ forms.textField({
    label: 'API Key',
    instructions: 'You can find it in the settings of your Active Campaign account' | t,
    id: 'acApikey',
    name: 'acApikey',
    value: settings.acApikey,
    errors: settings.getErrors('acApikey')
    })
}}
